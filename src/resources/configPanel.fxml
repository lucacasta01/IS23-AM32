<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="backgroundConfigPanel" prefHeight="410.0" prefWidth="200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.myShelfie.application.GUIcontroller.ConfigPanelController">
   <children>
      <HBox alignment="CENTER" prefHeight="31.0" prefWidth="180.0">
         <children>
            <Label text="Server configuration">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="233.0" prefWidth="178.0">
         <children>
            <Label text="IP Address">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="ipTxt" prefHeight="25.0" prefWidth="133.0">
               <VBox.margin>
                  <Insets right="30.0" />
               </VBox.margin></TextField>
            <Label text="TCP Port Number">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tcpPortTxt">
               <VBox.margin>
                  <Insets right="120.0" />
               </VBox.margin></TextField>
            <Label text="RMI Port Number">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="rmiPortTxt">
               <VBox.margin>
                  <Insets right="120.0" />
               </VBox.margin></TextField>
            <Label fx:id="errorLbl" text="Error" textFill="#c62020">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="setBtn" blendMode="OVERLAY" mnemonicParsing="false" onAction="#doSet" text="Set">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
